<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/toobarRL"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/tv_Titulo"
            android:text="@string/tv_Titulo"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_alignParentBottom="true"
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragmentoFL"
        android:layout_above="@+id/view"
        android:layout_below="@+id/toobarRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <View
        android:id="@+id/view"
        android:layout_above="@+id/bottomNV"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_button" />

    <RelativeLayout
        android:id="@+id/layout_bloqueo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_bar"
            android:layout_centerHorizontal="true"
            android:text="Escaneando... presiona nuevamente\n el gatillo para detener"
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:gravity="center"/>
    </RelativeLayout>

</RelativeLayout>